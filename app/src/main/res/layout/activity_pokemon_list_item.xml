<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20sp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/pokemon_Linear_layout"
        android:layout_gravity="center"
        android:background="@color/icPsychic"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <ImageView
            android:transitionName="pic"
            android:id="@+id/iv_pokemon"
            android:src="@mipmap/pokeball"
            android:layout_width="150sp"
            android:layout_height="100sp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_pokemon_name"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/odin_rounded"
            android:gravity="center"
            android:text="pokemon_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/stars" />
    </LinearLayout>
</androidx.cardview.widget.CardView>